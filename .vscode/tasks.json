{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "mkdir",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/C",
                "if not exist .\\build mkdir .\\build"
            ]
        },
        {
            "label": "build",
            "type": "shell",
            "command": "odin build . -debug -out:build/debug.exe",
            "group": "build"
        },
        {
            "label": "Build",
            "dependsOn": [
                "mkdir",
                "build"
            ]
        },
        {
            "label": "run",
            "type": "shell",
            "command": "odin run ."
        },
    ]
}